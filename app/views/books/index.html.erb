<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
      <% end %>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>

      <% @post_cnt.each_with_index do |count, index| %>
      <%= hidden_field_tag "#{index}_ago", count %>
      <% end %>

      <h3>7日間の投稿数の比較</h3>
      <canvas id="myLineChart" width="800" height="400"></canvas>
      <%= javascript_pack_tag 'books/index' %>
    </div>
  </div>
</div>
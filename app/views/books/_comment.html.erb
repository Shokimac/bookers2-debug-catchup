<h3>User Comment</h3>
<table class="table">
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></td>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user == current_user %>
      <%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{book.id}" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
<div>
  <%= form_with model:[book, new_comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder:'コメントをここへどうぞ' %>
  <%= f.submit '送信'%>
  <% end %>
</div>